---
import { getCollection } from "astro:content";
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Heading from "~/components/Heading.astro";
import CardBlogPost from "~/components/CardBlogPost.astro";
const posts = await getCollection("blog");
---

<Layout>
	<Section>
		<Container>
			<Heading>
				<h1 slot="heading-title" class="h2 text-teal-500">Blog</h1>
				<p slot="heading-content">
					Welcome to our blog! Here you will find the latest news and updates from our pet shelter. We are
					passionate about helping pets find loving forever homes, and we are excited to share our stories
					with you. Thank you for supporting our shelter!
				</p>
			</Heading>

			<div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
				{posts.map((post) => <CardBlogPost post={post} />)}
			</div>
		</Container>
	</Section>
</Layout>
